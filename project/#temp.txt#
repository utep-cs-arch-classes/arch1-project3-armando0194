/** Initializes everything, enables interrupts and green LED, 
 *  and handles the rendering for the screen
 */
void main()
{
  P1DIR |= GREEN_LED;		/**< Green led on when CPU on */	      
  P1OUT |= GREEN_LED;

  configureClocks();
  lcd_init();
  shapeInit();
  p2sw_init(1);

  layerInit(&enemyLeftSide);
  layerDraw(&enemyLeftSide);
  layerGetBounds(&fieldLayer, &fieldFence);

  enableWDTInterrupts();      /**< enable periodic interrupt */
  or_sr(0x8);	              /**< GIE (enable interrupts) */

  char* str = "Evade the obstacles";
  char* scoreStr = "Score: ";
  
  for(;;) { 
    while (!redrawScreen) { /**< Pause CPU if screen doesn't need updating */
      P1OUT &= ~GREEN_LED;    /**< Green led off witHo CPU */
      or_sr(0x10);	      /**< CPU OFF */
    }
    P1OUT |= GREEN_LED;       /**< Green led on when CPU on */
    redrawScreen = 0;
    //carHorOffset = 0;
    //carVerOffset = 0;
    // readSwitches();
    //movLayerDraw(&carMl0, &window);
    movLayerDraw(&enemyMl0, &enemyLeftSide);
    /*if(showInstruction)
      drawString5x7(screenWidth/2 - 47, screenHeight/2, str, COLOR_WHITE, COLOR_BLACK);
    else
      drawString5x7(screenWidth/2 + 10, 2, scoreStr, COLOR_WHITE, COLOR_BLACK);
    */
  }
}

/** Watchdog timer interrupt handler. 15 interrupts/sec */
void wdt_c_handler()
{
    static short count = 0;
  static short instructionCounter = 0;
    
  P1OUT |= GREEN_LED;		      /**< Green LED on when cpu on */
  count++;

  if (count == 15) {
    mlAdvance(&enemyMl0, &fieldFence);
    if (p2sw_read())
      redrawScreen = 1;
    count = 0;
  } 

  //instructionCounter++;

  //if ( count == 250) {
